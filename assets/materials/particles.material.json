{
    "blendblocks" :
    {
        "transparentBlend" :
        {
            "src_blend_factor": "src_alpha",
            "dst_blend_factor": "one_minus_src_alpha",
            "src_alpha_blend_factor": "one_minus_dst_alpha",
            "dst_alpha_blend_factor": "one"
        }
    },

    "macroblocks":{
        "noDepthWrite":{
            "depth_write" : false
        }
    },

    "unlit" :
    {
        "ParticleWhite" :
        {
            "diffuse" : [1, 1, 1, 1]
        },

        "ParticleAlphaWhite" :
        {
            "blendblock": "transparentBlend",
            "macroblock": "noDepthWrite",

            "diffuse" : [1, 1, 1, 1]
        },

        "ParticleAlphaGrey" :
        {
            "blendblock": "transparentBlend",
            "macroblock": "noDepthWrite",

            "diffuse" : [1, 1, 1, 0.25]
        }
    }
}
