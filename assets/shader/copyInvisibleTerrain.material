
fragment_program Postprocess/copyInvisibleTerrain_ps_GLSL glsl
{
	source copyInvisibleTerrain_ps.glsl

	param_named Image int 0
}

fragment_program Postprocess/copyInvisibleTerrain_ps_VK glslvk
{
	source copyInvisibleTerrain_ps.glsl
}

fragment_program Postprocess/copyInvisibleTerrain_ps_Metal metal
{
	source copyInvisibleTerrain_ps.metal
	shader_reflection_pair_hint Ogre/Compositor/QuadCameraDirNoUV_vs
}

fragment_program Postprocess/copyInvisibleTerrain_ps unified
{
	delegate Postprocess/copyInvisibleTerrain_ps_GLSL
	delegate Postprocess/copyInvisibleTerrain_ps_VK
	delegate Postprocess/copyInvisibleTerrain_ps_Metal
}

material Postprocess/CopyInvisibleTerrain
{
    technique
    {

		pass
		{
			depth_write off
			depth_check off

			cull_hardware none

			vertex_program_ref Ogre/Compositor/Quad_vs
			{
			}

			fragment_program_ref Postprocess/copyInvisibleTerrain_ps
			{
				param_named colour float3 0.5 0.89 1
			}
			texture_unit Image
			{
				tex_address_mode clamp
				filtering trilinear
			}

		}
	}
}
