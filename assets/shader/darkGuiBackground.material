
fragment_program Postprocess/darkGuiBackground_ps_GLSL glsl
{
	source darkGuiBackground_ps.glsl
}

fragment_program Postprocess/darkGuiBackground_ps_VK glslvk
{
	source darkGuiBackground_ps.glsl
}

fragment_program Postprocess/darkGuiBackground_ps_Metal metal
{
	source darkGuiBackground_ps.metal
	shader_reflection_pair_hint Ogre/Compositor/Quad_vs
}

fragment_program Postprocess/darkGuiBackground_ps unified
{
	delegate Postprocess/darkGuiBackground_ps_GLSL
	delegate Postprocess/darkGuiBackground_ps_VK
	delegate Postprocess/darkGuiBackground_ps_Metal
}

material Postprocess/DarkGuiBackground
{
	technique
	{
		pass
		{
			depth_write off
			depth_check on

			cull_hardware none

			vertex_program_ref Ogre/Compositor/Quad_vs
			{
			}

			fragment_program_ref Postprocess/darkGuiBackground_ps
			{
				param_named iResolution float3 400 800 1
				param_named_auto iTime time 0.3
			}

		}
	}
}
